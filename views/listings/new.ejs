<% layout("/layouts/boilerplate") %>

<body>
    <div class="container">
        <div class="col-12 mt-2">
            <a href="/listings" class="btn btn-secondary mb-3">Back</a>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3 class="text-center mt-2">Create a New Listing</h3>
                <!-- novalidate - for validation of bootstrap/    enctype : for Upload multipart/form-data ( image, any file etc.,)  -->
                <form method="post" action="/listings"  novalidate class="mt-3 needs-validation" enctype="multipart/form-data">  
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" name="listing[title]" id="title" class="form-control" placeholder="Enter title" required>
                        <div class="invalid-feedback">Please enter title</div>
                    </div> <br>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea name="listing[description]" id="description" class="form-control" cols="40" rows="5" placeholder="Enter description..." required></textarea>
                        <div class="invalid-feedback">Please enter description</div>
                    </div> <br>
                    <div class="form-group">
                        <label for="image">Image:</label>
                        <input type="text" name="listing[image]" id="image" class="form-control" placeholder="Enter URL/Link">
                    </div> <br>

                    <div class="form-group">
                        <label for="image">Upload Image:</label>
                        <input type="file" name="listing[image]" id="image" class="form-control" >
                    </div> <br>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="price">Price:</label>
                            <input type="number" name="listing[price]" id="price" class="form-control" placeholder="Enter price" required>
                            <div class="invalid-feedback">Please enter price</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="country">Country:</label>
                            <input type="text" name="listing[country]" id="country" class="form-control" placeholder="Enter country" required>
                            <div class="invalid-feedback">Please enter country name</div>
                        </div> 
                    </div>
                    <br>
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" name="listing[location]" id="location" class="form-control" placeholder="Enter location" required>
                        <div class="invalid-feedback">Please enter location</div>
                    </div> <br>
                  <br>
                    <button type="submit" class="btn add-btn">Add</button>
                </form>
                <br> <hr>
            </div>
        </div>
    </div>
</body>
</html>