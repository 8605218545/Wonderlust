<% layout("/layouts/boilerplate") %>

<style>

#filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    position: relative;
}

    .filter {
        text-align: center;
        margin: 1rem;
        margin-top: 2rem;
        opacity: 0.7;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.6rem;
    }

    .tax-info{
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        padding: 0 10px 0 10px;
        height: 40px;
        display: flex;
        align-items: center;
        margin-right: 1px;
        
    }



</style>

<body>
    <div id="filters" class="">
        <div class="filter">
            <div> <i class="fa-solid fa-fire"></i> </div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-bed"></i> </div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-city"></i> </div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-sun"></i> </div>
            <p>Maountains</p>
        </div>
        <div class="filter">
            <div> <i class="fa-brands fa-fort-awesome"></i> </div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-tents"></i> </div>
            <p>Campings</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-cow"></i> </div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-snowflake"></i> </div>
            <p>Arctic</p>
        </div>  &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display totle after taxes</label>
              </div>
        </div>
    </div>

  
    <div class="row row-cols-lg-5 row-cols-md-3 row-cols-sm-1 gap-lg-5 mt-1">
       
            <% for (let listing of allListings) { %>
              
                <!-- for use anker tag when we click on image then we go on show.ejs page -->
                    <a href="/listings/<%= listing._id %>" class="listing-link">  
                        <div class="card listing-card col" style="width: 16rem;">
                            <img class="card-img-top" style="height: 200px; width: 270px;" src="<%= listing.image.url %>" alt="Listing Image">
                            <!-- <div class="card-img-overlay"></div> -->
                            <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text"> &#8377;<%= listing.price.toLocaleString("en-IN") %>/ per day   &nbsp; &nbsp;
                            <i class="tax-info">+18% GST</i>    <br>
                            <%= listing.country  %> </p>
                           
                            
                            <!-- <a href="/listings/<%= listing._id %>" class="btn btn-primary">Details</a> -->
                            </div>
                        </div>
                    </a>
                
            <% } %>  
       
        </div>
  
    
    <!-- For  Display totles after taxes  (switch button) -->
<script>

    let taxSwitch = document.getElementById("flexSwitchCheckDefault")
    taxSwitch.addEventListener("click", () => {
        // console.log("Tax switch clecked")
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline"){
            info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    })

</script>
    
</body>

